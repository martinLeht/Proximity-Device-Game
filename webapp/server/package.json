{
  "name": "score-api",
  "version": "1.0.0",
  "description": "Server for the proximity game device to save game scores.",
  "main": "server.ts",
  "scripts": {
    "start:dev": "nodemon dist/server.js",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "start": "npx ts-node src/server.ts",
    "dev": "concurrently \"npm:build:dev\" \"npm:start:dev\"",
    "test-dev": "nodemon --watch . --ext ts --exec \"mocha -r ts-node/register test/**/*.test.ts\""
  },
  "author": "Martin Lehtomaa",
  "license": "ISC",
  "dependencies": {
    "@types/chai": "^4.2.9",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/mocha": "^7.0.1",
    "@types/mongodb": "^3.3.15",
    "@types/mongoose": "^5.7.0",
    "@types/mongoose-sequence": "^3.0.3",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "helmet": "^3.21.2",
    "mocha": "^7.1.0",
    "mongodb": "^3.5.2",
    "mongoose": "^5.8.11",
    "mongoose-sequence": "^5.2.2",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "typescript-ioc": "^1.2.6"
  }
}
